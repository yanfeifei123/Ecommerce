
.container{
  background-color: #FFF;
  position: relative;
}

.searchview {
  width: 100%;
  min-height: 100rpx;
  background-color: #fff;
  color: #666;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.searchviewform {
  background-color: #f5f5f5;
  line-height: 64rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: #333333;
  flex: 1;
  display: flex;
  align-items: center;
  margin: 0 30rpx;
  border-radius: 5000rpx;
}

.searchviewforminput {
  flex: 1;
  padding-right: 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  background-color: transparent;
}


.item{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px;
}

.itemview{
  width: 95%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50px;
  
}

.itememployee{
  width: 95%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
  /* border-bottom: 1px solid #ededed; */
}

.icon{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.avatar{
  width: 36px;
  height: 36px;
  border-radius: 5px;
  margin-right: 15px;
}

.sbutton {
  background-color: red;
  color: #fff;
  font-weight: 500;
  height: 27px;
  width: 50px;
  border-radius: 4px;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}


/**底部弹出式面板**/
  
.pop-up-wrapper {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}


.b_product_view {
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  border-radius: 5px;
}

.b_category_view_item{
  width: 100%;
  margin-top: 8px;
  padding: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
}


.catesscroll-view {
  width: 100%;
  height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.lbutton {
  background-color: #07c160;
  color: #fff;
  font-weight: 500;
  padding: 0 2vw;
  min-width: 24px;
  height: 40px;
  width: 80px;
  line-height: 40px;
  border-radius: 4px;
  font-size: 14px;
  /* margin: 0 8px 16px; */
  transition: background .3s;
}