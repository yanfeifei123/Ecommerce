.container{
  background-color: #FFF;
  position: relative;
}

.searchview {
  width: 100%;
  min-height: 100rpx;
  background-color: #fff;
  color: #666;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.searchviewform {
  background-color: #f5f5f5;
  line-height: 64rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: #333333;
  flex: 1;
  display: flex;
  align-items: center;
  margin: 0 30rpx;
  border-radius: 5000rpx;
}

.searchviewforminput {
  flex: 1;
  padding-right: 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  background-color: transparent;
}

.catesscroll-view {
  margin-top: 5px;
  width: 100%;
  height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.item{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 8px;
}

.itememployee{
  width: 95%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50px;
  /* border-bottom: 1px solid #ededed; */
}

.avatar{
  width: 36px;
  height: 36px;
  border-radius: 5px;
  margin-right: 15px;
}