@import "../../../colorui/main.wxss";
@import "../../../colorui/icon.wxss";


.searchview {
  width: 100%;
  min-height: 100rpx;
  background-color: #fff;
  color: #666;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.searchviewform {
  background-color: #f5f5f5;
  line-height: 64rpx;
  height: 64rpx;
  font-size: 24rpx;
  color: #333333;
  flex: 1;
  display: flex;
  align-items: center;
  margin: 0 30rpx;
  border-radius: 5000rpx;
}

.searchviewforminput {
  flex: 1;
  padding-right: 30rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  background-color: transparent;
}


.opt {
  margin-top: 5px;
  width: 100%;
  background-color: #FFF;
  padding: 5px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ededed;
}

.line {
  width: 2px;
  height: 20px;
  background-color: #ededed;
}

.button {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  font-weight: bold;
  height: 30px;
  width: auto;
  background-color: transparent;
  border: 1rpx solid #ededed;
}


.hover {
  background: #ededed;
}


.icon {
  width: 25px;
  height: 25px;
  margin-right: 5px;
}


.goods {
  display: flex;
  background-color: #eee;
  height: 200px;
}

.left_category {
  width: 25%;
}

.right_content {
  width: 75%;
  background-color: #fff;
}

.scrollcontainer {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}



.menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 13px;
  color: #666;
  padding: 5rpx;
}

.food-list {
  width: 95%;
  height: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 5px;
  border-bottom: 1rpx solid #ededed;
}

.food-list-imageView {
  width: 40%
}

.food-list-image {
  width: 98px;
  height: 83px;
  border-radius: 7rpx;
}

.food-list-rightview {
  width: 60%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;

}

.food-list-rightviewinfo {
  width: 100%;
  height: 25px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: 1rpx solid #ededed; */
}

.food-list-icon {
  height: 25px;
  width: 25px;
}





.active {
  background-color: #fff;
  color: #333;
  font-weight: bold;
  font-size: 14px;
}


/**      弹框操作     **/

.pop-up-wrapper {
  width: 100%;
  position: fixed;
  bottom: 50px;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

/**
  *
  操作商品分类面板
  */
.b_category_view {
  width: 95%;
  height: 240px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  /* background-color: hsla(0,0%,97%,.98); */
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 5px;
}

.b_product_view {
  width: 95%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 5px;
}



 


.b_category_view_item{
  width: 95%;
  margin-top: 8px;
  padding: 8px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.b_product_title{
  color: #fff;
  height:50px;
  display: flex;
  justify-content: start;
  align-items: center;
  width: 100%;
  padding: 15px;
}
.b_product_item{
  margin-top: 8px;
  width: 100%;
  padding: 5px 15px;
  display: flex;
  justify-content: start;
  align-items: center;
}


.b_product_imageb{
  width: 100%;
  height: 95px;
  border: 1px solid #ededed;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFF;
}
.b_product_imageb_img{
  height: 83px;
  width: 98px;
}

.b_product_imageb_img1{
  height: 70px;
  width: 70px;
}


.cinputtext{
  width: 100%;
  background-color: #fff;
  padding-left: 10px;
  height: 44px;
}

.sbutton {
  background-color: #07c160;
  color: #fff;
  font-weight: 500;
  padding: 0 2vw;
  min-width: 24px;
  height: 40px;
  width: 80px;
  line-height: 40px;
  border-radius: 4px;
  font-size: 14px;
  /* margin: 0 8px 16px; */
  transition: background .3s;
}