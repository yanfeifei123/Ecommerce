/* pages/meal/adduaddress/adduaddress.wxss */

.cates {
  display:flex;
  align-items: flex-start;
  justify-content:center;
  width: 100%;
  height: 100%;
  background-color: #fff;
}

.content{
  display:flex;
  align-items: center;
  justify-content:center;
  width: 100%;
  flex-wrap:wrap;
}





.textview{
  display:flex;
  align-items: center;
  justify-content: start;
  width: 95%;
  border-bottom: 1px solid #ededed;
  padding-left: 15rpx;
  padding-right: 15rpx; 
  height: 50px;
  
}

.textview .text{
  width: 25%;
  display:flex;
  align-items: center;
  justify-content: start;
  font-weight: bold;
}
.textview .inputtext{
  width: 70%;
}
 

.button{
  margin-top: 15px;
  width:95%;
  background-color:#FEDD4B;
  height:80rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  font-size: 15px;
}