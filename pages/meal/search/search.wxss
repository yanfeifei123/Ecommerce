 .searchview {
   width: 100%;
   min-height: 100rpx;
   background-color: #fff;
   color: #666;
   box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
   display: flex;
   justify-content: space-between;
   align-items: center;
 }

 .searchviewform {
   background-color: #f5f5f5;
   line-height: 64rpx;
   height: 64rpx;
   font-size: 24rpx;
   color: #333333;
   flex: 1;
   display: flex;
   align-items: center;
   margin: 0 30rpx;
   border-radius: 5000rpx;
 }

 .searchviewforminput {
   flex: 1;
   padding-right: 30rpx;
   height: 64rpx;
   line-height: 64rpx;
   font-size: 26rpx;
   background-color: transparent;

 }

 .action {
   margin-right: 30rpx;
   display: flex;
   align-items: center;
   height: 100%;
   justify-content: center;
   max-width: 100%;
 }
  