/* pages/meal/setmeal/setmeal.wxss */

.cates {
  width: 100%;
  height: 91%;
  background-color: #fff;
  position: relative;
}



.setmealtitle {
  padding: 10px;
  width: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
}



.setmeals {
  padding: 5px;
  margin-top: 5px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.setmeal {
  margin-top: 15px;
  height: 179px;
  width: 105px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  font-size: 30rpx;
  font-weight: bold;
  border: 1rpx solid #ededed;
  border-radius: 15rpx;
}

.setmeals:after {
  content: '';
  height: 179px;
  width: 105px;
}

.setmealname {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.setmealprice {
  width: 100%;
  font-size: 25rpx;
  color: red;
  display: flex;
  justify-content: center;
  align-items: center;
}

.setmealopt {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}


.viewImages {
  width: 77px;
  height: 77px;
}
 

.food-list-opt-image {
  width: 50rpx;
  height: 50rpx;
}

.food-list-opt-num {
  width: 50rpx;
  height: 50rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.bottomcart {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: #2b333d;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 99;
}

.bottomcart .cartView {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: -30rpx;
  left: 15rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: Center;
  border: 10rpx solid #2b333d;
  background-color: #e64340;
}

.bottomcart .cartView .cart {
  height: 60rpx;
  width: 60rpx;
}

.bottomcart .cartView .productroundmark {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  top: -30rpx;
  right: -20rpx;
  background-color: #e64340;
  padding: 2.5rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: Center;
  color: white;
  font-size: 25rpx;
  border: 1rpx solid rgba(50, 50, 50, 0.3);
}

.bottomcart .submitproduct {
  width: 180rpx;
  height: 100%;
  background-color: var(--yellow);
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottomcart .totalprice {
  display: flex;
  justify-content: start;
  align-items: center;
  color: #fff;
  margin-left: 20%;
}
