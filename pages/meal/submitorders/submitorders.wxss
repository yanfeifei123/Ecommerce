/* pages/submitorders/submitorders.wxss */

.cates {
  display:flex;
  align-items: center;
  justify-content:center;
  width: 100%;
  flex-direction:row;
  flex-wrap:wrap;
}

.cates .box {
  display: flex;
  justify-content: start;
  flex-direction:row;
  flex-wrap:wrap;
  width: 95%;
  background-color: #fff;
  border-radius: 14rpx;
  padding: 0 15rpx;
  margin-top: 15rpx;
  /* box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.8); */
}
.cates .box .self{
  margin-top: 5px; 
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 38px;
  border-radius: 14rpx;
}

.active{
  background-color: var(--yellow);
}

.cates .box .address{

  position: relative;
  justify-content:center;
  display: flex;
  flex-direction:row;
  flex-wrap:wrap;
  width: 99%;
}

.cates .box .btn{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 20rpx;
}

.cates .box .btn .add{
  position: absolute;
  left: 25%;
  z-index:99;
  font-weight: bold;
  font-size: 35rpx;
}

.cates .box .btn .addbutton{
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius:50rpx;
    border: 1rpx solid #f3b33e; 
    color: #f3b33e;
    width: 80%;
}

.cates .box .address .address1{
  font-size: 38rpx;
  font-weight: bold;
  /* height: 150rpx; */
  width: 100%;
  padding: 20rpx 10rpx 10rpx 10rpx;
}

.cates .box .address .address2{
  font-weight: 400;
  width: 100%;
  padding: 10rpx 10rpx 20rpx 10rpx;
}

.cates .box .right{
  position: absolute;
  top: 40%;
  right: 2px;
}

.cates .box .delivery{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #ededed;
  width: 100%;
  line-height: 150rpx;
  font-size: 14px;
  font-weight: bold;
  padding:10rpx;
  height: 100rpx;
}

.cates .box .commoditylist{
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border-top: 1rpx solid #ededed; */
  width: 100%;
  padding:10rpx;
  margin-top: 10rpx;
}
.cates .box .commoditylist .commodity{
  display: flex;
  justify-content: center;
  align-items: center;
  
}

.cates .box .commoditylist .commodity image{
   width: 51px;
   height: 51px;
   border-radius: 6rpx;
   
}
 
.cates .box .commoditylist .commodity .name{
   padding:5rpx ;
   font-size:20rpx;
   color:#999
}
.cates .box .commoditylist .commodity .title{
  padding:5rpx ;  
  font-size:30rpx; 
  font-weight: 900;
  color:#333;
  width: 133px;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap;
}

.cates .box .commoditylist .commodity .wz{
  margin-left: 15rpx;
  text-align:left;
  align-items:center;
  justify-content: center;
}
 
.cates .box .commoditylist .price{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}
.cates .box .commoditylist .price .unitprice{
  text-decoration:line-through;
  font-size: 25rpx;
  color: #999;
  margin-right: 15rpx;
}

.cates .box .packaging{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  font-weight: bold;
  margin-top: 10rpx;
  width: 100%;
}

.cates .box .firstorder{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #ededed;
  margin-top: 10rpx;
  padding: 20rpx 15rpx;
  width: 100%;
  font-weight: bold;
  
}

 .bottom {
  position:fixed;
  bottom:25rpx;
  display:flex;
  width:100%;
  height: 90rpx;
  justify-content:center;
  z-index: 999;

}

.bottom .child {
  width: 95%;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  
  
  /* padding: 20rpx; */
}


.bottom .paytheprice{
  width: 70%;
  height: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
  border-radius: 15rpx  0 0  15rpx;
  background-color: #2b333d;
}
.bottom .paytheprice .toprice{
  height: 100%;
  width: 70%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction:row;
  flex-wrap:wrap;
}


.bottom .pay{
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--yellow);
  font-weight: bold;
  font-size: 20px;
  width: 30%;
  height: 100%;
  border-radius: 0 15rpx 15rpx 0;
}









