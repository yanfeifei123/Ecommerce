<!--pages/meal/uaddress/uaddress.wxml-->

<view class="cates" catchtouchmove="noneEnoughPeople">


	<view class="addresslist {{item.isTouchMove ? 'touch-move-active' : ''}}" wx:for="{{uaddress}}" wx:key="{{index}}" data-index="{{index}}" data-id="{{item.id}}" id="{{item.id}}" hover-class="active" hover-start-time="100" hover-stay-time="100" bindlongtap="" bindtouchstart="touchstart" bindtouchmove="touchmove">
		<view class="content">
			<view class="addressname">
				<view class="dztext">
					{{item.area}} {{item.detailed}}
				</view>
				<view class="dzshr">
					{{item.name }} {{item.gender}} {{item.phone}}
				</view>
			</view>

			<view class="addressedit"  >
				 <radio-group class="radio-group" bindchange="radioChange" wx:if="{{submitorders==1}}">
						<label class="radio"  >
							<radio value="{{item.id}}"  />
						</label>
				 </radio-group>
				 <text class="cuIcon-write lg text-gray radio" data-id="{{item.id}}" bindtap="updateu_address"></text>
			   <text class="cuIcon-deletefill lg text-gray radio" catchtap="del" data-index="{{index}}"></text>  
			</view>

		</view>
		<view class="del" catchtap="del" data-index="{{index}}">删除</view>
	</view>

</view>
<button class="addbottom" bindtap="adduaddress">
	<text class="cuIcon-roundaddfill lg text-gray" style="font-size:40rpx"></text>
	<text style="font-size:30rpx;margin-left: 5px;">增加收货地址</text>
</button>